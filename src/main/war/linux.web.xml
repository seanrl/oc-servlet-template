<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>ServletTemplate</display-name>

    <servlet>
        <servlet-name>servlettemplate</servlet-name>
        <servlet-class>nrlssc.demo.DemoServlet</servlet-class>

        <init-param>
            <param-name>message</param-name>
            <param-value>Hello world!! :D</param-value>
        </init-param>
        <init-param>
            <param-name>configfolder</param-name>
            <param-value>/opt/nrl/demo/config</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>servlettemplate</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>



</web-app>